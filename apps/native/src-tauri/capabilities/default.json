{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-set-title",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [{ "path": "$APPDATA/**" }]
    },
    "dialog:default",
    "dialog:allow-save",
    "window-state:default",
    "store:default"
  ]
}
