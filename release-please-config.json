{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "simple",
  "include-component-in-tag": false,
  "include-v-in-tag": true,
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "packages": {
    ".": {
      "component": "form-forge",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        { "type": "json", "path": "package.json", "jsonpath": "$.version" },
        {
          "type": "json",
          "path": "apps/web/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "apps/native/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "apps/api/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "packages/api-spec/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "packages/ui/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "packages/typescript-config/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "apps/api/crates/actions/core/js/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "apps/native/src-tauri/tauri.conf.json",
          "jsonpath": "$.version"
        },
        { "type": "generic", "path": "apps/api/Cargo.toml", "glob": false },
        {
          "type": "generic",
          "path": "apps/native/src-tauri/Cargo.toml",
          "glob": false
        }
      ]
    }
  }
}
