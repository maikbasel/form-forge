{
  "name": "form-forge",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "check-types": "turbo check-types",
    "shadcn": "pnpm --filter @repo/ui shadcn",
    "tauri": "pnpm --filter native tauri dev",
    "check": "npx ultracite@latest check",
    "fix": "npx ultracite@latest fix",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "pdf-lib": "^1.17.1",
    "turbo": "^2.3.3",
    "typescript": "5.5.4",
    "ultracite": "6.3.2"
  },
  "packageManager": "pnpm@9.15.5",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.12",
      "@types/react-dom": "^18.3.1"
    }
  }
}
